
<%- include('../../partials/header') %>

<%- include('../../partials/navbar') %>

    <div class="container"> <br>

        <div class="card">
            <div class="card-header">
                <h2>Novo artigo</h2>
            </div>

            <div class="card-body">
                <form method="POST" action="/categoria/salvar">

                    <input class="form-control" type="text" name="titulo"
                        placeholder="Defina o titulo do artigo"> <br>

                        <textarea name="assunto-artigo" id="artigo" placeholder="Escreva o artigo aqui" class="form-control" ></textarea> <br>

                    <button type="submit" class="btn-success">Publicar</button>
                </form>
            </div>

        </div>
    </div>

<%- include('../../partials/footer') %>


<script src="/tinymce/tinymce.min.js"></script>

<script>
tinymce.init({
    selector: '#artigo',
    plugins: [
        'advlist',
        'autolink',
        'link',
        'image',
        'lists',
        'preview',
        'searchreplace',
        'wordcount',
        'fullscreen',
        'insertdatetime',
        'media',
        'save',
        'table',
        'emoticons',
    ]
})
</script>