<%- include('../../partials/header') %>

<%- include('../../partials/navbar') %>

<div class="container">
    <hr>
    <h2>Categorias</h2>

    <a href="/admin/categoria/novo"><button class="btn btn-success">Criar nova categoria</button></a>
    <hr>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Titulo</th>
                <th>Slug</th>
                <th>Ações</th>
            </tr>
        </thead>

        <tbody>

            <% categoria.forEach(categoria => { %>

                <tr>
                    <th><%= categoria.id %></th>
                    <th><%= categoria.titulo %></th>
                    <th><%= categoria.slug %></th>
                    <th>
                        <button class="btn btn-warning">Editar</button>
                        
                        <button class="btn btn-danger">Deletar</button>
                    </th>
                </tr>

           <% }) %>
        </tbody>
    </table>

</div>



<%- include('../../partials/footer') %>